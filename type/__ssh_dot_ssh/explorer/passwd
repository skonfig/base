# Prints the passwd(5) entry of the user named after __object_id.
#

owner="$__object_id"

if command -v getent >/dev/null
then
    getent passwd "$owner" || true
else
    case $owner in
        [0-9][0-9]*)
            awk -F: "\$3 == \"$owner\" { print }" /etc/passwd
            ;;
        *)
            grep "^$owner:" /etc/passwd || true
            ;;
    esac
fi
