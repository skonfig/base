# Prints the name of all groups --user is a member of.
#

if test -f "${__object:?}/parameter/user"
then
	user=$(cat "${__object:?}/parameter/user")
else
	user=${__object_id:?}
fi

id -G -n "${user}" 2>/dev/null | tr ' ' '\n' | LC_ALL=C sort
